{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging": "Information",
      "CarvedRock": "Debug"      
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
      "SingleLine": true,
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss ",
      "UseUtcTimestamp": true,
      "JsonWriterOptions": {
        "Indented": true
        }
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Critical"
      }
    }             
  },
  "AllowedHosts": "*"
}
